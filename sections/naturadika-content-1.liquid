{% if section.settings.divider %}<div class="section--divider">{% endif %}

<div
  data-section-id="{{ section.id }}"
  data-section-type="custom-content-1"
  class="custom-content-1">
    
  <div class="page-width">
    <div class="main-title">
      <h2>{{ section.settings.heading }}</h2>
    </div>
    <div class="content-wrap">
      <div class="text-wrap">
        <div class="row">
          <h3>{{ section.settings.sub_heading_1 }}</h3>
          <p>{{ section.settings.text_1 }}</p>
        </div>
        <div class="row">
          <h3>{{ section.settings.sub_heading_2 }}</h3>
          <p>{{ section.settings.text_2 }}</p>
        </div>
        <div class="row">
          <h3>{{ section.settings.sub_heading_3 }}</h3>
          <p>{{ section.settings.text_3 }}</p>
        </div>
        <div class="row">
          <h3>{{ section.settings.sub_heading_4 }}</h3>
          <p>{{ section.settings.text_4 }}</p>
        </div>
        <div class="text-foot">
          <strong>{{ section.settings.text_bottom }}</strong>
        </div>
      </div>
      <picture>
        <source srcset="{{ section.settings.image_mobile | img_url: 'original' }}" media="(max-width: 767px)" />
        <img src="{{ section.settings.image_desktop | img_url: 'original' }}" />
      </picture>
    </div>
  </div>
  
</div>

{% if section.settings.divider %}</div>{% endif %}

{% schema %}
  {
    "name": "Naturadika content 1",
	"class": "index-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "divider",
        "label": "Show section divider",
        "default": false
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "image_picker",
        "id": "image_desktop",
        "label": "Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Mobile Image"
      },
      {
        "type": "text",
        "id": "sub_heading_1",
        "label": "Sub Heading 1"
      },
      {
        "type": "textarea",
        "id": "text_1",
        "label": "Text 1"
      },
      {
        "type": "text",
        "id": "sub_heading_2",
        "label": "Sub Heading 2"
      },
      {
        "type": "textarea",
        "id": "text_2",
        "label": "Text 2"
      },
      {
        "type": "text",
        "id": "sub_heading_3",
        "label": "Sub Heading 3"
      },
      {
        "type": "textarea",
        "id": "text_3",
        "label": "Text 3"
      },
      {
        "type": "text",
        "id": "sub_heading_4",
        "label": "Sub Heading 4"
      },
      {
        "type": "textarea",
        "id": "text_4",
        "label": "Text 4"
      },
      {
        "type": "textarea",
        "id": "text_bottom",
        "label": "Text Bottom"
      }
	],
    "presets": [
      {
        "name": "Naturadika content 1",
        "category": "Text",
        "blocks": [
        ]
      }
    ]
  }
{% endschema %}
