{% if section.settings.divider %}<div class="section--divider">{% endif %}

<div
  data-section-id="{{ section.id }}"
  data-section-type="custom-content-2"
  class="custom-content-2">
  
  <div class="page-width">
    <picture>
        <source srcset="{{ section.settings.image_mobile | img_url: 'original' }}" media="(max-width: 767px)" />
        <img src="{{ section.settings.image_desktop | img_url: 'original' }}" />
      </picture>
    <div class="text-wrap">
      <h2 class="title">{{ section.settings.heading }}</h2>
      <p>{{ section.settings.sub_heading }}</p>
      <ul>
        <li>{{ section.settings.text_1 }}</li>
        <li>{{ section.settings.text_2 }}</li>
        <li>{{ section.settings.text_3 }}</li>
        <li>{{ section.settings.text_4 }}</li>
      </ul>
    </div>
  </div>
  
</div>

{% if section.settings.divider %}</div>{% endif %}

{% schema %}
  {
    "name": "Naturadika content 2",
	"class": "index-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "divider",
        "label": "Show section divider",
        "default": false
      },
      {
        "type": "image_picker",
        "id": "image_desktop",
        "label": "Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Mobile Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "sub_heading",
        "label": "Sub Heading"
      },
      {
        "type": "text",
        "id": "text_1",
        "label": "Text 1"
      },
      {
        "type": "text",
        "id": "text_2",
        "label": "Text 2"
      },
      {
        "type": "text",
        "id": "text_3",
        "label": "Text 3"
      },
      {
        "type": "text",
        "id": "text_4",
        "label": "Text 4"
      }
	],
	"presets": [
      {
        "name": "Naturadika content 2",
        "category": "Text",
        "blocks": [
        ]
      }
    ]
  }
{% endschema %}