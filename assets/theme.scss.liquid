.grid-product__content {
  /*position: relative;*/
  text-align: center;  
  max-width: 600px;
  padding: 30px;
  margin: auto;
}

.grid-product__title--heading {
  @include headingFontStack;
  font-size: $type_base_size + 2;
  @if $type_header_line_height < 1 {
