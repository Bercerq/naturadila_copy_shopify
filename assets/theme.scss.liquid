// sidebar color swatches

a.color-swatch:hover,
.tag:not(.tag--active) a:hover .color-swatch:hover {
  box-shadow: 0 0 0 1px $colorTextBody;
}

.tag--active .color-swatch {
  box-shadow: 0 0 0 2px $colorTextBody;
}

.color-swatch--small {
