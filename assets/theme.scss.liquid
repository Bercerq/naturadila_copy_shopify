.input-group-field {
  -ms-flex: 1 1 auto;
      flex: 1 1 auto;
  margin: 0;
  min-width: 0;
}

.input-group-btn {
  -ms-flex: 0 1 auto;
      flex: 0 1 auto;
  margin: 0;
  display: -ms-flexbox;
  display: flex; // forces .btn full height

