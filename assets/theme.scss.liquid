  }
}

.lazyloaded {
  opacity: 1;
  transition: opacity 0.4s ease;
}

.video-wrapper {
  position: relative;
  overflow: hidden;
  max-width: 100%;
  padding-bottom: 56.25%;
  height: 0;
  height: auto;

