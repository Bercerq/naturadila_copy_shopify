    text-transform: uppercase;
    font-size: 20px;
    letter-spacing: 1px;
    margin: 0 0 10px;

    @include media-query($small) {
      font-size: $type_base_size - 3;
    }
  }
}

.grid-product__description {
  font-size: 13px;
  line-height: 17px;
  max-width: 90%;
  margin: 0 auto 20px;
  
  strong {
    font-size: 14px;
    font-style: italic;
  }
  p {
    overflow: hidden;
    margin: 0;
    height: calc( {{ settings.product_desc_row }} * 17px );
    
    @include media-query($medium-down) {
      height: calc( {{ settings.product_desc_row }} * 17px + 34px );
    } 
